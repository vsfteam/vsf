#ifndef __SIMPLE_LIBC_CSTDLIB__
#define __SIMPLE_LIBC_CSTDLIB__

#include <math.h>
#include <stdlib.h>

inline double abs(double const value) noexcept
{
    return fabs(value);
}
inline float abs(float const value) noexcept
{
    return fabsf(value);
}
inline long double abs(long double const value) noexcept
{
    return fabsl(value);
}

inline long abs(long const value)
{
    return labs(value);
}

inline long long abs(long long const value)
{
    return llabs(value);
}

namespace std {
    using ::div_t;
    using ::ldiv_t;
    using ::lldiv_t;

    using ::abs;
    using ::labs;
    using ::llabs;
    using ::atof;
    using ::atoi;
    using ::atol;
    using ::strtod;
    using ::strtof;
    using ::strtol;
    using ::strtoll;

    using ::system;
    using ::exit;
    using ::atexit;

#if VSF_LINUX_SIMPLE_STDLIB_CFG_HEAP_MONITOR == ENABLED
    using ::____malloc_ex;
    using ::____calloc_ex;
    using ::____realloc_ex;
#endif

#if     VSF_LINUX_SIMPLE_STDLIB_CFG_HEAP_MONITOR != ENABLED                     \
    ||  VSF_LINUX_SIMPLE_STDLIB_CFG_HEAP_MONITOR_TRACE_CALLER != ENABLED
    using ::malloc;
    using ::calloc;
    using ::realloc;
#endif
    using ::free;

    using ::getenv;
    using ::putenv;
    using ::setenv;
    using ::unsetenv;

    using ::srand;
    using ::rand;

    using ::abort;
}

#endif      // __SIMPLE_LIBC_CSTDLIB__
