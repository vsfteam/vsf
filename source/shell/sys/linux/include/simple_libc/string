    bool operator <=(const basic_string_view<T, Traits> &left, const basic_string<T, Traits, Alloc> &right) noexcept {
        return right.compare(left) >= 0;
    }

    template <class T, class Traits, class Alloc>
    bool operator >=(const T * const left, const basic_string<T, Traits, Alloc> &right) noexcept {
        return right.compare(left) <= 0;
    }
    template <class T, class Traits, class Alloc>
    bool operator >=(const basic_string<T, Traits, Alloc> &left, const T * const right) noexcept {
        return left.compare(right) >= 0;
