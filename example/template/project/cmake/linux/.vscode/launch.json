    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/vsf_template",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Pass SIGUSR1(used for timer) for gdb",
                    "text": "handle SIGUSR1 nostop noprint pass",
                    "ignoreFailures": true
                },
                {
                    "description": "Pass SIGTTIN(used for terminal) for gdb",
                    "text": "handle SIGTTIN nostop noprint pass",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}